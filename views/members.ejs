<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />
    <link rel="stylesheet" href="/stylesheet/members.css" />
  </head>
  <body>
    <%- include('./includes/navigation.ejs') %>
    <!------------------------------------------------->
    <hr />
    <div class="container">
      <h1><%= title %></h1>
      <div class="members-container">
        <% members.forEach(function(member) { %>
        <div class="member-container">
          <h2><%= member.name %> <%= member.id %></h2>
          <p><%= member.username %></p>
          <p><%= member.email %></p>
          <div class="update-del">
            <form
              method="POST"
              action="/members/<%= member.id %>?_method=DELETE"
            >
              <button type="submit">Delete</button>
            </form>
            <a href="/member/<%= member.id %>/edit"
              ><button type="submit">Update</button></a
            >
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <hr />
    <!-- Footer included from the includes directory -->
    <%- include('./includes/footer.ejs') %>
    <!------------------------------------------------->
  </body>
</html>
